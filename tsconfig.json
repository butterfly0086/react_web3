{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",

    "lib": ["es2016", "dom"],
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "declaration": true,
    "forceConsistentCasingInFileNames": true,

    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
  },
  "includes": "./src/**/*"
}
